<h1>
	Jokes
</h1>
<br>

<% @jokes.each do |j| %>
<div class="joke-container">
<table class="joke">
    <tr class="joke">
<tr>
	<td colspan='3'>
		<%= j.content %>
	</td>
</tr>
<tr>
    <td>
        <br>
    </td>
</tr>
<tr>
	
	<td>
	<%= j.up  %> <%= link_to 'like', joke_path(j.id, :vote=>'up'), :method=>'PUT' %>
	</td>
	<td>
	<%= j.down %> <%= link_to 'dislike', joke_path(j.id, :vote=>'down'), :method=>'PUT' %>
	</td>
	<td class="pull-right">
		<%= link_to 'x', joke_path(j.id), :method => 'DELETE',:confirm=>'Are you sure you want to delete?' %>
	</td>
</tr>
</tr>
<tr>
</tr>
</table>
</div>
<% end %>
